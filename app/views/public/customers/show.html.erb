
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
        <div class="mypage",style="text-align:center">
        <h2>マイページ</h2>
 
      <div class="update">
        <h4>登録情報</h4>
          <%= link_to "編集する",edit_customers_path %>
      </div>
      
      <table class='customer_info_table'>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
  
    
       <!--配送先・注文履歴リンク-->
        <h4>配送先</h4>
           <%= link_to "一覧を見る", shippings_path, class:"btn btn-sm btn-success" %> </br>
       
        <h4>注文履歴</h4>
          <%= link_to "一覧を見る", orders_path, class:"btn btn-sm btn-success" %>
    </div>
  </div>
</div>